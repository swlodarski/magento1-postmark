<config>
	<modules>
		<Round3media_Postmark>
			<version>0.1.0</version>
		</Round3media_Postmark>
	</modules>
	<global>
		<models>
			<core>
				<rewrite>
					<email_template>Round3media_Postmark_Model_Email_Template</email_template>
					<email>Round3media_Postmark_Model_Email</email>
				</rewrite>
			</core>
		</models>
		<helpers>
			<postmark>
				<class>Round3media_Postmark_Helper</class>
			</postmark>
		</helpers>
	</global>
	<adminhtml>
		<translate>
			<modules>
				<Round3media_Postmark>
					<files>
						<default>Round3media_Postmark.csv</default>
					</files>
				</Round3media_Postmark>
			</modules>
		</translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<postmark>
											<title>Postmark Settings</title>
										</postmark>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>

	<default>
		<postmark>
			<settings>
				<enabled>0</enabled>
				<apikey></apikey>
				<email></email>
			</settings>
		</postmark>
	</default>
</config>